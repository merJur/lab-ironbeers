
<div class="container my-5">
    <div class="row mb-5">
        <div class="col-md-3 d-flex justify-content-center align-items-center">
            <img src="{{beer.[0].image_url}}" class="beer-img" alt="No image available">
        </div>
        <div class="col-md-9">
            <h2 class="mb-3 text-primary">{{beer.[0].name}}</h2>
            <h4 class="mb-3 text-muted">{{beer.[0].tagline}}</h4>
            <p>{{beer.[0].description}}</p>
            <h4>Food Pairing</h4>
            <ul>
                {{#each beer.[0].food_pairing as |food|}}
                    <li>{{food}}</li>
                {{/each}}
            </ul>
            <p><span class="fw-bold">Brewers Tips: </span>{{beer.[0].brewers_tips}}</p>
       
    </div>
</div>